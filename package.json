{
  "name": "selective-ui",
  "version": "1.1.1",
  "description": "An overlay for the HTML select element.",
  "author": "Huỳnh Công Xuân Mai",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/selective-ui.umd.js",
  "module": "dist/selective-ui.esm.js",
  "exports": {
    ".": {
      "import": "./dist/selective-ui.esm.js",
      "require": "./dist/selective-ui.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "build:ts": "rimraf compiled && tsc -p tsconfig.build.json",
    "watch": "rollup -c --watch",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "cssnano": "^6.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.45",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.0",
    "rollup-plugin-brotli": "^3.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "select",
    "dropdown",
    "ui",
    "component",
    "custom-select",
    "searchable-select"
  ],
  "browserslist": [
    ">0.25%",
    "not dead"
  ]
}
