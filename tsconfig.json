{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2019"],
    "useDefineForClassFields": false,

    "strict": false,
    "noImplicitAny": false,

    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },

    "skipLibCheck": true,
    
    "noEmit": true
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}